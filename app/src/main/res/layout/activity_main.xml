<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/Italy_bg">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency"
        android:id="@+id/button"
        android:backgroundTint="#ffff9d4e"
        android:layout_above="@+id/button2"
        android:onClick="Currency"
        android:background="#74d766e0"
        android:layout_alignEnd="@+id/textView7"
        android:layout_toEndOf="@+id/imageView4"
        android:textColor="#ffff995f"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:onClick="Currency"
        android:background="#4fff3ec2"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#ff7560ff" />

    <AnalogClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/analogClock"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView5" />

    <ViewSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewSwitcher"
        android:layout_above="@+id/button2"
        android:layout_alignStart="@+id/button" />

    <Gallery
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gallery"
        android:layout_toEndOf="@+id/viewSwitcher"
        android:layout_below="@+id/analogClock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome"
        android:id="@+id/textView5"
        style="@android:style/Holo.ButtonBar"
        android:textSize="64dp"
        android:layout_below="@+id/analogClock"
        android:layout_alignParentStart="true"
        android:shadowColor="#ff776b0d"
        android:textColor="#ff466bff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="        AEC   money"
        android:id="@+id/textView6"
        android:textSize="@android:dimen/app_icon_size"
        android:layout_below="@+id/textView5"
        android:textColor="#ff63abff"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="   Calculator"
        android:id="@+id/textView7"
        android:textSize="60dp"
        android:layout_above="@+id/button"
        android:textColor="#ff71b4ff"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/global_currency"
        android:layout_above="@+id/textView7"
        android:layout_alignEnd="@+id/analogClock" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/little-girl-with-big-purple-calculator"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentStart="true" />

</RelativeLayout>
